<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Shelfe" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="colorPrimary">@color/cyan_200</item>
        <item name="colorPrimaryVariant">@color/cyan_400</item>
        <item name="colorOnPrimary">@color/black</item>
        <item name="colorPrimaryContainer">@color/cyan_800</item>
        <item name="colorOnPrimaryContainer">@color/cyan_100</item>
        <item name="colorPrimaryInverse">@color/cyan_800</item>

        <item name="colorSecondary">@color/sea_green_100</item>
        <item name="colorSecondaryVariant">@color/sea_green_300</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="colorSecondaryContainer">@color/sea_green_1000</item>
        <item name="colorOnSecondaryContainer">@color/sea_green_100</item>

        <item name="colorError">@color/red_300</item>
        <item name="colorOnError">@color/black</item>
        <item name="colorErrorContainer">@color/red_900</item>
        <item name="colorOnErrorContainer">@color/red_100</item>

        <item name="android:colorBackground">@color/cyan_1000</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">false</item>
        <item name="colorOnBackground">@color/neutral_50</item>
        <item name="colorSurface">@color/cyan_1000</item>
        <item name="colorOnSurface">@color/neutral_50</item>

        <item name="appBarLayoutStyle">@style/AppTheme.AppBarLayout</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.Shelfe.BottomSheet.Dialog</item>
    </style>

    <style name="Theme.Shelfe" parent="Base.Theme.Shelfe" />
</resources>
